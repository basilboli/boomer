<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Boomer</name>

    <description></description>

    <author email="dev@boomer.im" href="http://boomer.im">
        Boomer Team
    </author>

    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />

    <platform name="android">
        <allow-intent href="market:*" />

        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-hdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-ldpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-mdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-xhdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-xxhdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-landscape.png" density="land-xxxhdpi"/>

        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-ldpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-xhdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-xxhdpi"/>
        <splash src="res/android/screen/screen-xxxhdpi-portrait.png" density="port-xxxhdpi"/>

        <icon src="res/android/icon/mdpi.png" density="mdpi" />
        <icon src="res/android/icon/hdpi.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi.png" density="xhdpi" />
        <icon src="res/android/icon/mdpi.png" density="mdpi" />
        <icon src="res/android/icon/hdpi.png" density="hdpi" />
        <icon src="res/android/icon/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi.png" density="xxxhdpi" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
