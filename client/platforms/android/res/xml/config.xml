<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="Compass">
        <param name="android-package" value="org.apache.cordova.deviceorientation.CompassListener" />
    </feature>
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Insomnia">
        <param name="android-package" value="nl.xservices.plugins.Insomnia" />
    </feature>
    <name>Boomer</name>
    <description />
    <author email="dev@boomer.im" href="http://boomer.im">
        Boomer Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="land-ldpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="land-mdpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="land-xhdpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="land-xxhdpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="land-xxxhdpi" src="res/android/screen/screen-xxxhdpi-landscape.png" />
    <splash density="port-hdpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <splash density="port-ldpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <splash density="port-mdpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <splash density="port-xhdpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <splash density="port-xxhdpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <splash density="port-xxxhdpi" src="res/android/screen/screen-xxxhdpi-portrait.png" />
    <icon density="xhdpi" src="res/android/icon/xhdpi.png" />
    <icon density="mdpi" src="res/android/icon/mdpi.png" />
    <icon density="hdpi" src="res/android/icon/hdpi.png" />
    <icon density="xxhdpi" src="res/android/icon/xxhdpi.png" />
    <icon density="xxxhdpi" src="res/android/icon/xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
